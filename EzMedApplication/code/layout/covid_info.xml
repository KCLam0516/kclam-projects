<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CovidInfo">

    <include layout= "@layout/toolbar"></include>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/tv"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorPrimaryDark"
        android:gravity="center_horizontal"
        android:text="Information"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="27dp" />

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="COVID-19 Information"
            android:textAllCaps="true"
            android:textColor="#111112"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/word2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:paddingBottom="15dp"
            android:text="Let's help stop the spread of COVID-19."
            android:textColor="#343437"
            android:textSize="20sp" />

        <RelativeLayout
            android:id="@+id/oriBox1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/colorPrimary">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="How COVID-19 transmitted?"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/expand_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:padding="20dp"
                android:text="expand all"
                android:background="@color/colorPrimary" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/expandableView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:background="@color/lightRed">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:text="@string/info_1"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:justificationMode="inter_word"/>


        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/oriBox2"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop ="20dp"
            android:background="@color/colorPrimary">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="What can I do to protect myself?"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/expand_btn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="expand all"
                android:background="#00000000"
                android:padding="20dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/expandableView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:background="@color/lightRed">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="20dp"
                android:text="@string/info_2"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:justificationMode="inter_word"/>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Box3"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop ="20dp"
            android:background="@color/colorPrimary">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="What to do when you think you're infected?"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/expandBtn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="expand all"
                android:background="#00000000"
                android:padding="20dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/expandableView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginBottom="20dp"
            android:background="@color/lightRed">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:text="@string/info_3"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:justificationMode="inter_word"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <Button
                android:id="@+id/second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:background="@drawable/selected"
                android:drawableTop="@drawable/ic_baseline_info_24"
                android:drawableTint="@color/darkGrey"
                android:paddingTop="4dp"
                android:text="Info"
                android:textColor="@color/darkGrey"
                android:textSize="13dp" />

            <Button
                android:id="@+id/third"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:background="@drawable/border"
                android:drawableTop="@drawable/ic_baseline_search_24"
                android:drawableTint="@color/white"
                android:paddingTop="4dp"
                android:text="Check"
                android:textColor="@color/white"
                android:textSize="13dp" />

            <Button
                android:id="@+id/forth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:background="@drawable/border"
                android:drawableTop="@drawable/ic_baseline_notifications_active_24"
                android:drawableTint="@color/white"
                android:paddingTop="4dp"
                android:text="Reminder"
                android:textColor="@color/white"
                android:textSize="13dp" />

            <Button
                android:id="@+id/fifth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:background="@drawable/border"
                android:drawableTop="@drawable/ic_baseline_location_city_24"
                android:drawableTint="@color/white"
                android:paddingTop="4dp"
                android:text="Location"
                android:textColor="@color/white"
                android:textSize="13dp" />

        </LinearLayout>
    </LinearLayout>
    </ScrollView>


</RelativeLayout>